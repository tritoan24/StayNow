<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangKiDangNhap.ChonLoaiTK"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/You_are"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        />

    <!-- Contact Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/cart_background"
            android:id="@+id/nguoichothueButton"
            android:gravity="center">



            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/house_chunha"
                android:backgroundTint="@color/black" />

            <!-- TextView chứa số điện thoại nằm bên dưới -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Innkeeper"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/nguoithueButton"
            android:background="@drawable/cart_background"
            android:gravity="center">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/leasing_nguoithue"
                android:backgroundTint="@color/black" />

            <!-- TextView chứa số điện thoại nằm bên dưới -->
            <TextView
                android:id="@+id/infor_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/Tenants"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>