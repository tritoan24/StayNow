<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="24dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    android:layout_marginBottom="16dp"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">
        <TextView
            android:id="@+id/tv_name_tenant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người thuê: Ngo Trung Hieu"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_semi_bold"/>
        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT: 0899430751"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            />
        <TextView
            android:id="@+id/tv_name_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phong tro gia re"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian: 18:00 ngày 22-11-2024"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginBottom="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:background="@drawable/bg_button_detail"
                android:text="Hủy"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="44dp"
                android:background="@drawable/bg_button"
                android:text="Xác nhận"
                android:textColor="@color/white"
                android:textSize="14sp"
                />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>