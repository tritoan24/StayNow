<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/bg_dialog_white"
    tools:context=".QuyenLoiKyHopDong.QuyenLoiChuTroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:shapeAppearanceOverlay="@style/RoundedImageView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_quyenloi"
            android:layout_marginStart="15dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/purple_border_bottom"
            android:letterSpacing="0.05"
            android:fontFamily="serif"
            />
    </LinearLayout>

    <!--    Text 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_agree"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nguoi_thue1"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            />
    </LinearLayout>

    <!--    Text 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_agree"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nguoi_thue_2"
            android:letterSpacing="0.05"
            android:textColor="@color/black"
            android:lineSpacingExtra="2dp"
            android:fontFamily="serif"
            />
    </LinearLayout>

    <!--    Text 3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_agree"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nguoi_thue_3"
            android:letterSpacing="0.05"
            android:textColor="@color/black"
            android:lineSpacingExtra="2dp"
            android:fontFamily="serif"
            />
    </LinearLayout>

    <!--    Text 4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_agree"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nguoi_thue_4"
            android:letterSpacing="0.05"
            android:textColor="@color/black"
            android:lineSpacingExtra="2dp"
            android:fontFamily="serif"
            />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tôi đã đọc, không hiển thị lại"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:buttonTint="@color/purple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:paddingBottom="2dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btn_confirm"
            android:text="Xác Nhận"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:fontFamily="serif"
            android:textSize="14sp"
            android:backgroundTint="#471BC4"/>
    </LinearLayout>


</LinearLayout>