<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BaoMat.ThongTinNguoiDung">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back Button and Title -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#552dc9">

            <ImageView
                android:id="@+id/btnBackCT"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_back"
                android:contentDescription="Back icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin người dùng"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_marginStart="16dp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- User Image and Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:translationY="-60dp">

            <ImageView
                android:id="@+id/infor_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/infor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nguyễn Trí Toán"
                android:textAlignment="center"
                android:textSize="22dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btnNhanTin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#552dc9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_messenger" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Nhắn tin"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Contact Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:translationY="-40dp"
            >

            <LinearLayout
                android:layout_width="131dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@drawable/cart_background"
                android:gravity="center">

                <!-- Hàng ngang chứa ImageView và TextView "Điện thoại" -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/phone"
                        android:backgroundTint="@color/black"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điện thoại"
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- TextView chứa số điện thoại nằm bên dưới -->
                <TextView
                    android:id="@+id/infor_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03994****"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="131dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@drawable/cart_background"
                android:gravity="center">

                <!-- Hàng ngang chứa ImageView và TextView "Điện thoại" -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/email"
                        android:backgroundTint="@color/black"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- TextView chứa số điện thoại nằm bên dưới -->
                <TextView
                    android:id="@+id/infor_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="tritoan.****** @gmail.com"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <!-- Room Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng hiện có"
            android:textSize="23sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:translationY="-20dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rc_listRoom"
            />

    </LinearLayout>


</ScrollView>
