<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="24dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">
        <TextView
            android:id="@+id/tv_name_renter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chủ nhà: Ngo Trung Hieu"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_semi_bold"/>
        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT: 0899430751"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            />
        <TextView
            android:id="@+id/tv_name_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phong tro gia re"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian: 18:00 ngày 22-11-2024"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginBottom="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_button"
            android:text="Hủy lịch hẹn"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>