<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuanLyPhongTro.QuanLyKhoPhong.QuanLyKhoPhongActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="38dp">

        <ImageView
            android:id="@+id/btnBackKhoPhong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_back_black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý kho phòng"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"/>

    </LinearLayout>

<!--    Nut toa nha-->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnToaNha"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="16dp"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_toa_nha"
                android:scaleType="centerCrop"/>

<!--            Lam mo anh-->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="TÒA NHÀ"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>
            
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

<!--    Nut quan ly phong don -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnPhongDon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_phong_don"
                android:scaleType="centerCrop"/>

            <!--            Lam mo anh-->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="PHÒNG ĐƠN"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>